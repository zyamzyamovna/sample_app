<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Hi!This is the Status Id System!</h1>

    <h2>
      Glad to see you here!
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("iss_logo.jpg", alt: "ISS"), 'http://www.itsmartsystems.eu/' %>
<% end %>